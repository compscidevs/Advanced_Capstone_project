const express = require('express');
const router = express.Router();
const userController = require('../controllers/userController');

// Routes
router.get('/', userController.getAllUsers); // List all users
router.get('/create', userController.showCreateForm); // Show create user form
router.post('/create', userController.createUser); // Handle create user form submission
router.get('/:id', userController.getUserById); // Get user by ID (API)
router.get('/:id/edit', userController.showEditForm); // Show edit user form
router.post('/:id/edit', userController.updateUser); // Handle update user form submission
router.get('/:id/delete', userController.deleteUser); // Delete user (using GET for simplicity; use POST in production)

module.exports = router;